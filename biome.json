{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"!**/node_modules/**",
			"!**/.next/**",
			"!**/dist/**",
			"!**/*.d.ts",
			"!**/drizzle/**"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"suspicious": {
				"noExplicitAny": "error"
			}
		}
	}
}
