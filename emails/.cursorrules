export default function Template() {
  return (
    <Html>
      <Head>
        <Font fontFamily="Outfit" fallbackFontFamily="Arial" fontWeight={600} fontStyle="normal" />
        <Font fontFamily="Geist"  fallbackFontFamily="Arial" fontWeight={500} fontStyle="normal" />
      </Head>
      <Preview>Subject preview here…</Preview>
      <Tailwind config={{ theme: { extend: { colors: { brand: '#7C3AED' }, fontFamily: { outfit: ['Outfit','Arial','sans-serif'], geist: ['Geist','Arial','sans-serif'] } } } }}>
        <Body className="mx-auto my-auto font-geist text-slate-700">
          <Container className="mx-auto my-10 max-w-[600px] rounded border border-solid border-neutral-200 bg-white px-10 py-5">
            <Section className="mt-8">
              {/* Brand mark */}
              {/* <Img src={INBOUND_WORDMARK} height="32" alt="inbound" /> */}
            </Section>
            <Heading className="mx-0 my-7 p-0 text-2xl font-semibold text-black">Title</Heading>

            {/* Inline statline example */}
            <Section className="my-6">
              <div className="rounded-lg border border-[#e6ebf1] bg-slate-50 px-4 py-3 text-center">
                <Text className="m-0 text-base leading-6 text-neutral-700">
                  <span className="inline-block whitespace-nowrap">
                    <span className="uppercase tracking-wider text-neutral-500">{'TOTAL\u00A0SENT'}</span>
                    <span className="ml-2 font-semibold text-neutral-900">0</span>
                  </span>
                  <span className="mx-3 text-neutral-300">•</span>
                  <span className="inline-block whitespace-nowrap">
                    <span className="uppercase tracking-wider text-neutral-500">{'TOTAL\u00A0RECEIVED'}</span>
                    <span className="ml-2 font-semibold text-neutral-900">0</span>
                  </span>
                </Text>
              </div>
            </Section>

            <Section className="my-8">
              <Link href="#" className="rounded-lg bg-brand px-6 py-3 text-center text-[12px] font-semibold text-white no-underline">Call to action</Link>
            </Section>
          </Container>
        </Body>
      </Tailwind>
    </Html>
  )
}
```

